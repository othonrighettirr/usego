generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl", "linux-musl-openssl-3.0.x", "linux-musl-arm64-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      String   @default("user")
  createdAt DateTime @default(now())
  
  instances    Instance[]
  webhooks     Webhook[]
  integrations Integration[]
}

model Instance {
  id          String   @id @default(uuid())
  userId      String
  name        String
  status      String   @default("DISCONNECTED")
  apiKey      String?  @unique
  sessionData Json?
  createdAt   DateTime @default(now())
  
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages     Message[]
  sharedTokens SharedToken[]
  newsletters  Newsletter[]
}

model Newsletter {
  id          String   @id @default(uuid())
  instanceId  String
  jid         String
  name        String?
  description String?
  isOwner     Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  instance Instance @relation(fields: [instanceId], references: [id], onDelete: Cascade)
  
  @@unique([instanceId, jid])
}

model Message {
  id         String   @id @default(uuid())
  instanceId String
  from       String
  to         String
  type       String
  content    Json
  status     String   @default("PENDING")
  createdAt  DateTime @default(now())
  
  instance Instance @relation(fields: [instanceId], references: [id], onDelete: Cascade)
}

model Webhook {
  id        String   @id @default(uuid())
  userId    String
  url       String
  events    String[]
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Integration {
  id        String   @id @default(uuid())
  userId    String
  type      String
  config    Json
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SharedToken {
  id          String   @id @default(uuid())
  instanceId  String
  token       String   @unique
  permissions String[]
  expiresAt   DateTime
  createdAt   DateTime @default(now())
  
  instance Instance @relation(fields: [instanceId], references: [id], onDelete: Cascade)
}
